{
  "name": "HornyLink",
  "version": "1.5.1",
  "main": "src/main.js",
  "author": "WaifNET",
  "description": "HornyLink P2P Application",
  "scripts": {
    "start": "powershell -NoLogo -NoProfile -Command \"chcp 65001; electron .\"",
    "start:dev": "NODE_ENV=development electron .",
    "build": "electron-builder --win --x64",
    "build:linux": "electron-builder --linux --x64",
    "build:linux:arm64": "electron-builder --linux --arm64",
    "build:all": "electron-builder -wl",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.waifnet.hornyLink",
    "productName": "HornyLink",
    "copyright": "Copyright Â© 2025 WaifNET",
    "directories": {
      "output": "builds",
      "buildResources": "resources"
    },
    "extraResources": [
      {
        "from": "icon.ico",
        "to": "icon.ico"
      },
      {
        "from": "icon.png",
        "to": "icon.png"
      }
    ],
    "win": {
      "target": [
        {
          "target": "dir",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "icon.ico",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "requestedExecutionLevel": "asInvoker"
    },
    "linux": {
      "target": [
        {
          "target": "dir",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "icon.png",
      "category": "Network",
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "desktop": {
        "Name": "HornyLink",
        "Comment": "P2P File Sharing Application",
        "Categories": "Network;FileTransfer;",
        "StartupNotify": "true"
      }
    },
    "asar": true,
    "asarUnpack": [],
    "compression": "maximum",
    "buildDependenciesFromSource": false,
    "npmRebuild": false
  },
  "files": [
    "src/**/*",
    "package.json",
    "!src/**/*.map",
    "!**/node_modules/**/{CHANGELOG.md,README.md,README,readme.md,readme}",
    "!**/node_modules/**/{test,__tests__,tests,powered-test,example,examples}",
    "!**/node_modules/**/*.d.ts",
    "!**/node_modules/.bin",
    "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
    "!.editorconfig",
    "!**/._*",
    "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
    "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
    "!**/{appveyor.yml,.travis.yml,circle.yml}",
    "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
  ],
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "axios": "^1.13.2",
    "bcrypt": "^5.1.1",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "create-desktop-shortcuts": "^1.11.1",
    "express": "^5.1.0",
    "express-session": "^1.18.1",
    "extract-zip": "^2.0.1",
    "form-data": "^4.0.2",
    "fs-extra": "^11.3.0",
    "iconv-lite": "^0.6.3",
    "multer": "^1.4.5-lts.2",
    "node-fetch": "^3.3.2",
    "sqlite3": "^5.1.7",
    "systeminformation": "^5.27.13",
    "unzipper": "^0.12.3",
    "validator": "^13.15.0",
    "windows-shortcuts": "^0.1.6"
  }
}
